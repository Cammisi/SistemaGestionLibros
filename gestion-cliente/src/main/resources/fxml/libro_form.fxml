<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>

<VBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #3c3c3c; -fx-padding: 30;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.libros.gestion_cliente.ui.controller.LibroFormController">

    <stylesheets>
        <URL value="@../css/styles.css" />
    </stylesheets>

    <Label text="Nuevo Libro" styleClass="label-titulo" style="-fx-font-size: 20px;"/>

    <VBox spacing="5">
        <Label text="ISBN" style="-fx-text-fill: #cccccc;"/>
        <TextField fx:id="txtIsbn" promptText="Ej: 978-1234567890" style="-fx-background-color: #505050; -fx-text-fill: white;"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Título" style="-fx-text-fill: #cccccc;"/>
        <TextField fx:id="txtTitulo" promptText="Título de la obra" style="-fx-background-color: #505050; -fx-text-fill: white;"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Autor" style="-fx-text-fill: #cccccc;"/>
        <TextField fx:id="txtAutor" promptText="Nombre del autor" style="-fx-background-color: #505050; -fx-text-fill: white;"/>
    </VBox>

    <HBox spacing="10">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Precio Base ($)" style="-fx-text-fill: #cccccc;"/>
            <TextField fx:id="txtPrecio" promptText="0.00" style="-fx-background-color: #505050; -fx-text-fill: white;"/>
        </VBox>
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Stock Inicial" style="-fx-text-fill: #cccccc;"/>
            <TextField fx:id="txtStock" promptText="0" style="-fx-background-color: #505050; -fx-text-fill: white;"/>
        </VBox>
    </HBox>

    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
        <Button text="Cancelar" onAction="#cancelar" style="-fx-background-color: #555555;"/>
        <Button text="Guardar Libro" onAction="#guardar" styleClass="boton-verde"/>
    </HBox>
</VBox>