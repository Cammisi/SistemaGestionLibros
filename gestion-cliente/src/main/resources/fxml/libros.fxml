<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.libros.gestion_cliente.ui.controller.LibroController">

    <stylesheets>
        <URL value="@../css/styles.css" />
    </stylesheets>

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 20;">
            <Label text="Gestión de Libros" styleClass="label-titulo" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="+ Nuevo Libro" onAction="#irANuevoLibro" styleClass="boton-verde" />
        </HBox>
    </top>

    <center>
        <TableView fx:id="tablaLibros" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colIsbn" text="ISBN" prefWidth="100" />
                <TableColumn fx:id="colTitulo" text="Título" prefWidth="250" />
                <TableColumn fx:id="colAutor" text="Autor" prefWidth="150" />

                <TableColumn fx:id="colTematica" text="Temática" prefWidth="120" />

                <TableColumn fx:id="colPrecio" text="Precio ($)" prefWidth="100" />
                <TableColumn fx:id="colStock" text="Stock" prefWidth="80" />

                <TableColumn fx:id="colAccionStock" text="Reponer" prefWidth="90" style="-fx-alignment: CENTER;"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" />
            </BorderPane.margin>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20;">
            <Button text="Volver al Menú" onAction="#volverAlMenu" prefWidth="150" />
            <Region prefWidth="50" />
            <Button text="⬅ Anterior" onAction="#anterior" />
            <Label fx:id="lblPagina" text="Página 1 de 1" style="-fx-text-fill: white; -fx-font-weight: bold;" />
            <Button text="Siguiente ➡" onAction="#siguiente" />
        </HBox>
    </bottom>

</BorderPane>