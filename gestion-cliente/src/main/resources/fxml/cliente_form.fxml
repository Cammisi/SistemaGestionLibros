<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<VBox spacing="15" alignment="CENTER_LEFT" prefWidth="1100" prefHeight="700"
      style="-fx-background-color: #3c3c3c; -fx-padding: 30;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.libros.gestion_cliente.ui.controller.ClienteFormController">

    <stylesheets>
        <URL value="@../css/styles.css" />
    </stylesheets>

    <Label text="Nuevo Cliente" styleClass="label-titulo" style="-fx-font-size: 22px;" minWidth="-Infinity"/>

    <HBox spacing="20" VBox.vgrow="ALWAYS">

        <VBox spacing="15" HBox.hgrow="ALWAYS">
            <HBox spacing="15">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="DNI *" style="-fx-text-fill: #cccccc;" minWidth="-Infinity"/>
                    <TextField fx:id="txtDni" promptText="Sin puntos" style="-fx-background-color: #505050; -fx-text-fill: white;"/>
                </VBox>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Teléfono" style="-fx-text-fill: #cccccc;" minWidth="-Infinity"/>
                    <TextField fx:id="txtTelefono" promptText="Ej: 342-..." style="-fx-background-color: #505050; -fx-text-fill: white;"/>
                </VBox>
            </HBox>

            <HBox spacing="15">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Nombre *" style="-fx-text-fill: #cccccc;" minWidth="-Infinity"/>
                    <TextField fx:id="txtNombre" style="-fx-background-color: #505050; -fx-text-fill: white;"/>
                </VBox>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Apellido *" style="-fx-text-fill: #cccccc;" minWidth="-Infinity"/>
                    <TextField fx:id="txtApellido" style="-fx-background-color: #505050; -fx-text-fill: white;"/>
                </VBox>
            </HBox>

            <HBox spacing="15">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Dirección" style="-fx-text-fill: #cccccc;" minWidth="-Infinity"/>
                    <TextField fx:id="txtDireccion" style="-fx-background-color: #505050; -fx-text-fill: white;"/>
                </VBox>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Localidad" style="-fx-text-fill: #cccccc;" minWidth="-Infinity"/>
                    <TextField fx:id="txtLocalidad" style="-fx-background-color: #505050; -fx-text-fill: white;"/>
                </VBox>
            </HBox>

            <VBox spacing="5">
                <Label text="Fecha de Alta" style="-fx-text-fill: #cccccc;" minWidth="-Infinity"/>
                <DatePicker fx:id="dpFechaAlta" maxWidth="Infinity"/>
            </VBox>
        </VBox>

        <VBox spacing="15" HBox.hgrow="ALWAYS">
            <VBox spacing="5">
                <Label text="Preferencias del Cliente" style="-fx-text-fill: #cccccc;" minWidth="-Infinity"/>
                <TextArea fx:id="txtIntereses" prefRowCount="2" wrapText="true"
                          promptText="Ej: Novelas policiales, Historia..."
                          style="-fx-control-inner-background: #505050; -fx-text-fill: white;"/>
            </VBox>

            <Separator style="-fx-padding: 5 0 5 0;"/>

            <Label text="Composición Familiar"
                   style="-fx-text-fill: #ffd700; -fx-font-weight: bold;" minWidth="-Infinity"/>

            <HBox spacing="8" alignment="BOTTOM_LEFT">
                <VBox spacing="2">
                    <Label text="Nombre" style="-fx-text-fill: #aaa; -fx-font-size: 20px;" minWidth="-Infinity"/>
                    <TextField fx:id="txtFamNombre" prefWidth="110" style="-fx-background-color: #505050; -fx-text-fill: white;"/>
                </VBox>
                <VBox spacing="2">
                    <Label text="Apellido" style="-fx-text-fill: #aaa; -fx-font-size: 20px;" minWidth="-Infinity"/>
                    <TextField fx:id="txtFamApellido" prefWidth="110" style="-fx-background-color: #505050; -fx-text-fill: white;"/>
                </VBox>
                <VBox spacing="2">
                    <Label text="Año" style="-fx-text-fill: #aaa; -fx-font-size: 20px;" minWidth="-Infinity"/>
                    <TextField fx:id="txtFamAnio" prefWidth="110" promptText="2015" style="-fx-background-color: #505050; -fx-text-fill: white;"/>
                </VBox>
                <VBox spacing="2">
                    <Label text="Relación" style="-fx-text-fill: #aaa; -fx-font-size: 20px;" minWidth="-Infinity"/>
                    <ComboBox fx:id="cmbFamRelacion" prefWidth="200" style="-fx-base: #505050;"/>
                </VBox>
                <VBox spacing="2" HBox.hgrow="ALWAYS">
                    <Label text="Preferencias (Ej: Fútbol)" style="-fx-text-fill: #aaa; -fx-font-size: 20px; " minWidth="-Infinity"/>
                    <TextField fx:id="txtFamIntereses" style="-fx-background-color: #505050; -fx-text-fill: white;"/>
                </VBox>
                <Button text="+" onAction="#agregarFamiliarTabla" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>

            <TableView fx:id="tablaFamiliares" VBox.vgrow="ALWAYS" style="-fx-base: #333333;">
                <columns>
                    <TableColumn fx:id="colFamNombre" text="Nombre" prefWidth="90" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colFamApellido" text="Apellido" prefWidth="90" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colFamRelacion" text="Relación" prefWidth="90" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colFamAnio" text="Año" prefWidth="60" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colFamEdad" text="Edad" prefWidth="70" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colFamIntereses" text="Preferencias" prefWidth="120" style="-fx-alignment: CENTER;"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </HBox>

    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;" VBox.vgrow="NEVER">
        <Button text="Cancelar" onAction="#cancelar" prefWidth="100" style="-fx-background-color: #555555; -fx-text-fill: white;"/>
        <Button text="Guardar Todo" onAction="#guardar" prefWidth="150" styleClass="boton-verde"/>
    </HBox>

</VBox>