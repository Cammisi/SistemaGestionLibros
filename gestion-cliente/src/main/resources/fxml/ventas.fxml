<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.libros.gestion_cliente.ui.controller.VentaController">

    <stylesheets>
        <URL value="@../css/styles.css" />
    </stylesheets>

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 20; -fx-background-color: #333333;">
            <Label styleClass="label-titulo" text="Nueva Venta" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#volverAlMenu" prefWidth="150" style="-fx-background-color: #555555;" text="Volver al Menú" />
        </HBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="Cliente:" />
                <ComboBox fx:id="cmbClientes" prefWidth="300" promptText="Seleccione un cliente..." />
            </HBox>

            <Region prefHeight="10" />

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-text-fill: white;" text="Buscar Libro:" />
                <TextField fx:id="txtBuscarLibro" prefWidth="250" promptText="Título o ISBN..." />
                <Button onAction="#buscarLibro" text="Buscar" />
            </HBox>

            <TableView fx:id="tablaLibros" prefHeight="200">
                <columns>
                    <TableColumn fx:id="colLibroTitulo" prefWidth="300" text="Título" />
                    <TableColumn fx:id="colLibroAutor" prefWidth="200" text="Autor" />
                    <TableColumn fx:id="colLibroPrecio" prefWidth="100" text="Precio" />
                    <TableColumn fx:id="colLibroStock" prefWidth="80" text="Stock" />
                    <TableColumn fx:id="colLibroAccion" prefWidth="100" style="-fx-alignment: CENTER;" text="Agregar" />
                </columns>
            </TableView>

            <Label style="-fx-text-fill: #ffd700; -fx-font-size: 16px; -fx-font-weight: bold;" text="CARRITO DE COMPRA" />

            <TableView fx:id="tablaCarrito" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colCarritoTitulo" prefWidth="350" text="Libro" />
                    <TableColumn fx:id="colCarritoCantidad" prefWidth="100" text="Cantidad" />
                    <TableColumn fx:id="colCarritoSubtotal" prefWidth="120" text="Subtotal" />
                    <TableColumn fx:id="colCarritoEliminar" prefWidth="100" style="-fx-alignment: CENTER;" text="Quitar" />
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="20">

                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Cantidad Cuotas:" style="-fx-text-fill: white;"/>
                    <ComboBox fx:id="cmbCuotas" prefWidth="100" style="-fx-font-weight: bold;"/>
                </VBox>

                <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="Total a Pagar:" />
                <Label fx:id="lblTotal"
                       style="-fx-text-fill: #2ecc71; -fx-font-size: 24px; -fx-font-weight: bold;"
                       text="\$ 0.00" />

                <Button onAction="#finalizarVenta" prefHeight="50" prefWidth="200" styleClass="boton-verde" text="FINALIZAR VENTA" />
            </HBox>

        </VBox>
    </center>

</BorderPane>