<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.libros.gestion_cliente.ui.controller.VentaController">

    <stylesheets>
        <URL value="@../css/styles.css" />
    </stylesheets>

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 20; -fx-background-color: #333333;">
            <Label styleClass="label-titulo" text="Nueva Venta" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#volverAlMenu" prefWidth="150" style="-fx-background-color: #555555;" text="Volver al Menú" />
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">

            <HBox spacing="30" alignment="CENTER_LEFT">

                <VBox spacing="5">
                    <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="1. Seleccione Cliente:" />
                    <ComboBox fx:id="cmbClientes" prefWidth="300" promptText="Seleccione un cliente..." />
                </VBox>

                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="2. Seleccione Libro:" />
                    <HBox spacing="10">
                        <ComboBox fx:id="cmbLibros" maxWidth="Infinity" HBox.hgrow="ALWAYS" promptText="Despliegue para ver libros..." styleClass="combo-box-grande"/>

                        <Button text="Agregar al Carrito" onAction="#agregarDesdeCombo" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
                    </HBox>
                </VBox>
            </HBox>

            <Region prefHeight="10" />

            <Label style="-fx-text-fill: #ffd700; -fx-font-size: 18px; -fx-font-weight: bold;" text="CARRITO DE COMPRA" />

            <TableView fx:id="tablaCarrito" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colCarritoTitulo" text="Libro" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colCarritoCantidad" text="Cantidad" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colCarritoSubtotal" text="Subtotal" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colCarritoEliminar" text="Acción" style="-fx-alignment: CENTER;" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 20; -fx-background-color: #2b2b2b; -fx-border-color: #444444; -fx-border-width: 1 0 0 0;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Cantidad de Cuotas:" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                <ComboBox fx:id="cmbCuotas" editable="true" prefWidth="100" style="-fx-font-weight: bold;"/>
            </HBox>

            <Region HBox.hgrow="ALWAYS" />

            <HBox alignment="CENTER_RIGHT" spacing="20">
                <Label text="Total a Pagar:" style="-fx-text-fill: white; -fx-font-size: 18px;" />
                <Label fx:id="lblTotal" style="-fx-text-fill: #2ecc71; -fx-font-size: 24px; -fx-font-weight: bold;" text="\$ 0.00" />
                <Button onAction="#finalizarVenta" prefHeight="45" prefWidth="200" styleClass="boton-verde" text="FINALIZAR VENTA" />
            </HBox>
        </HBox>
    </bottom>

</BorderPane>