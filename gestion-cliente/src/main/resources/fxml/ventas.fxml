<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<BorderPane fx:id="rootPane" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.libros.gestion_cliente.ui.controller.VentaController">

    <stylesheets>
        <URL value="@../css/styles.css" />
    </stylesheets>

    <top>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #333333;">
            <Label text="Nueva Venta" styleClass="label-titulo" />

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Cliente:" style="-fx-text-fill: #cccccc; -fx-font-weight: bold;"/>
                <ComboBox fx:id="cmbClientes" prefWidth="300" promptText="Seleccione o busque cliente"/>
                <Button text="+ Nuevo" onAction="#nuevoCliente" style="-fx-background-color: #555555; -fx-font-size: 10px;"/>
            </HBox>

            <Separator />

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Libro:" style="-fx-text-fill: #cccccc; -fx-font-weight: bold;"/>
                <ComboBox fx:id="cmbLibros" prefWidth="300" promptText="Busque por tÃ­tulo"/>

                <Label text="Cant:" style="-fx-text-fill: #cccccc;"/>
                <Spinner fx:id="spinnerCantidad" prefWidth="80" editable="true"/>

                <Button text="Agregar al Carrito" onAction="#agregarAlCarrito" styleClass="boton-verde"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label text="Detalle de la Venta" style="-fx-font-size: 16px; -fx-text-fill: #aaaaaa;"/>

            <TableView fx:id="tablaCarrito" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colProducto" text="Libro / Producto" prefWidth="350" />
                    <TableColumn fx:id="colPrecio" text="Precio Unit." prefWidth="120" />
                    <TableColumn fx:id="colCantidad" text="Cant." prefWidth="80" />
                    <TableColumn fx:id="colSubtotal" text="Subtotal" prefWidth="120" styleClass="total-column"/>
                    <TableColumn fx:id="colAccion" text="Eliminar" prefWidth="80" style="-fx-alignment: CENTER;"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-padding: 20; -fx-background-color: #2b2b2b; -fx-border-color: #555555; -fx-border-width: 1 0 0 0;">

            <Button text="Cancelar / Volver" onAction="#volverAlMenu" prefWidth="150" style="-fx-background-color: #c0392b; -fx-text-fill: white;"/>

            <Region HBox.hgrow="ALWAYS" />

            <Label text="TOTAL A PAGAR:" style="-fx-font-size: 18px; -fx-text-fill: #cccccc;"/>
            <Label fx:id="lblTotal" text="\$ 0.00" style="-fx-font-size: 28px; -fx-text-fill: #ffd700; -fx-font-weight: bold;"/>

            <Button text="CONFIRMAR VENTA" onAction="#confirmarVenta" styleClass="boton-verde" prefWidth="200" prefHeight="50" style="-fx-font-size: 16px;"/>
        </HBox>
    </bottom>

</BorderPane>